<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title> - Products</title>
</head>
<body>
    <header>
        <nav>
            <div class="logo"></div>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="products">
            <h1>Featured Products</h1>
            
            <div class="product">
                <img src="/images/product1.jpg" alt="Product 1">
                <h2>Product 1</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                <span class="price">$29.99</span>
                <form action="/create-checkout-session" method="POST">
                    <input type="hidden" name="priceId" value="price_1Nk06mLWuSm1CyQDSzbEvhtQ">
                    <button type="submit" class="btn">Buy Now</button>
                </form>
            </div>
            
            <div class="product">
                <img src="/images/product2.jpg" alt="Product 2">
                <h2>Product 2</h2>
                <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco.</p>
                <span class="price">$39.99</span>
                <form action="/create-checkout-session" method="POST">
                    <input type="hidden" name="priceId" value="price_1Nk06mLWuSm1CyQDSzbEvhtQ">
                    <button type="submit" class="btn">Buy Now</button>
                </form>
            </div>
            
            
            <!-- Add more product entries as needed -->
            
        </section>
    </main>

    <footer>
        <p>&copy; 2023. All rights reserved.</p>
    </footer>
    <script>
        const stripe = Stripe('pk_test_51NjyTTLWuSm1CyQDuCaoJMXck6i1Za9cmTFa3h2kMMuvs6qomV07MwqI1hwMJBjjpIrR4NuQ5SXBa2etPQfqUg5i00of5KU9qC');
    
        document.addEventListener('DOMContentLoaded', () => {
        const buyButtons = document.querySelectorAll('.btn');

        buyButtons.forEach(button => {
            button.addEventListener('click', async event => {
                event.preventDefault(); // Prevent the default form submission behavior

                const form = button.closest('form');
                const priceId = form.querySelector('[name="priceId"]').value;

                // Call your server endpoint to create a checkout session
                const response = await fetch('/create-checkout-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ priceId }), // Send the price ID to the server
                });

                const data = await response.json();
                console.log(data); // Print the response data to the console

                // Redirect to the checkout page
                window.location.href = data.redirectUrl; // Redirect the user to the checkout URL
            });
        });
    });
    </script>
    
</body>
</html>